{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"noShadowRestrictedNames": "off"
			},
			"style": {
				"noParameterAssign": "off"
			}
		},
		"ignore": ["pkg/*", "dist", "test/common"]
	},
	"formatter": {
		"enabled": true,
		"ignore": ["pkg/*", "dist", "test/common"]
	}
}
